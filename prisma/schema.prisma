generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BuildingType {
    UNIV_APT
    SUITE
    PLAZA
    DELUXE
    CLASSIC
}

model Building {
    id          Int             @id @default(autoincrement())
    name        String
    address     String
    type        BuildingType
    latitude    Float           @default(34.0689)
    longitude   Float           @default(-118.4452)
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt

    @@unique([name, address])
    @@index([name])
    @@index([address])
    @@index([type])
}

model User {
    id          Int             @id @default(autoincrement())
    username    String          @unique
    password    String
    email       String          @unique
    class       Int
    reviews     Review[]        @relation("UserReviews")
    votes       UserVote[]      @relation("UserVotes")
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt

    @@index([email])
    @@index([username])
}

model Review {
    id          Int             @id @default(autoincrement())
    building    String          // Scalar field for indexing
    overall     Int
    location    Int             // Hill location (food, amenities, other dorms)
    distance    Int             // distance to campus
    social      Int
    noise       Int
    clean       Int
    text        String?         // optional text review
    upvotes     Int             @default(0)
    downvotes   Int             @default(0)
    authorId    Int
    author      User            @relation("UserReviews", fields: [authorId], references: [id])
    votes       UserVote[]      @relation("ReviewVotes")
    createdAt   DateTime        @default(now())
    updatedAt   DateTime        @updatedAt

    @@index([building])
    @@index([authorId])
}

enum VoteType {
    UPVOTE
    DOWNVOTE
}

model UserVote {
    id          Int             @id @default(autoincrement())
    userId      Int
    reviewId    Int
    voteType    VoteType
    user        User            @relation("UserVotes", fields: [userId], references: [id], onDelete: Cascade)
    review      Review          @relation("ReviewVotes", fields: [reviewId], references: [id], onDelete: Cascade)
    createdAt   DateTime        @default(now())

    @@unique([userId, reviewId])
    @@index([userId])
    @@index([reviewId])
}

